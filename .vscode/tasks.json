{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Odin Game",
            "type": "shell",
            "command": "D:/ODIN/odin run src",
            "options": {
                "cwd": "D:/ReCMake"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false
            },
            "problemMatcher": {
                "owner": "odin",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.+)\\((\\d+):(\\d+)\\) (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            }
        }
    ]
}